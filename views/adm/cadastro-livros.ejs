<%-include('./cabecalho.ejs')%>
    <div class="principal">
        <div class="cadastro-container">
            <h1>Cadastro de Livros</h1>
            <form id="cadastro-livro" action="/cadastrar-livro" method="POST">
                <div class="form-group">
                    <label for="nome">Nome do Livro:</label>
                    <input type="text" id="nome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="autor">Autor:</label>
                    <input type="text" id="autor" name="autor" required>
                </div>
                <div class="form-group">
                    <label for="resumo">Resumo:</label>
                    <textarea id="resumo" name="resumo" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="catalogacao">Catalogação:</label>
                    <input type="text" id="catalogacao" name="catalogacao" required>
                </div>
                <div class="form-group">
                    <label for="paginas">Número de páginas: </label>
                    <input type="number" id="paginas" name="paginas" min="0" required>
                </div>
                <div class="button-cadastro">
                <button type="submit" style="background-color: #007BFF;">Cadastrar Livro</button>
            </div>
            </form>
        </div>
    </div>
<%-include('../user/rodape.ejs')%>

