<%-include('./cabecalho.ejs')%>
<div class="principal">
  <div class="cadastro-container">
    <h1>Editar Agendamento</h1>
    <form
      id="cadastro-agendamento"
      action="/cadastrar-agendamento"
      method="POST"
    >
      <div class="form-group">
        <label for="aluno">Aluno:</label>
        <input
          type="text"
          id="aluno"
          name="aluno"
          placeholder="Digite o nome do aluno"
          required
        />
      </div>
      <div class="form-group">
        <label for="nome">Nome do Livro:</label>
        <input
          type="text"
          id="nome"
          name="nome"
          placeholder="Digite o nome do livro"
          required
        />
      </div>
      <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="status" class="form-control">
          <option value="em-emprestimo">Em Empréstimo</option>
          <option value="pendente">Pendente</option>
          <option value="entregue">Entregue</option>
        </select>
      </div>

      <div class="form-group">
        <label for="observacao">Observações:</label>
        <input
          type="text"
          id="observacao"
          name="observacao"
          placeholder="Digite aqui as observações"
          required
        />
      </div>
      <div class="row">
        <label for="date-entrega">Data de entrega:</label>
        <input type="date" id="date-entrega" name="date-entrega" required />
      </div>
      <div class="row">
        <label for="date-entrega-devolucao">Data de devolução real:</label>
        <input
          type="date"
          id="date-entrega-devolucao"
          name="date-entrega-devolucao"
          required
        />
      </div>

      <div class="button-cadastro">
        <button type="submit" style="background-color: #007bff">Salvar</button>
      </div>
    </form>
  </div>
</div>
<%-include('../user/rodape.ejs')%>
